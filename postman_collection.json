{
  "info": {
    "name": "Fast Room Manager API",
    "description": "Collection for testing Room CRUD operations",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "item": [
        {
          "name": "Health Check - Root",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/health",
              "host": ["{{baseUrl}}"],
              "path": ["api", "health"]
            }
          }
        },
        {
          "name": "Health Check - V1",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/health",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "health"]
            }
          }
        }
      ]
    },
    {
      "name": "Rooms",
      "item": [
        {
          "name": "Get All Rooms",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/rooms",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "rooms"]
            }
          }
        },
        {
          "name": "Create Room",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Conference Room A\",\n  \"floor\": 2,\n  \"capacity\": 10,\n  \"description\": \"Large conference room with projector\",\n  \"amenities\": [\"projector\", \"whiteboard\", \"wifi\"]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/rooms",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "rooms"]
            }
          }
        },
        {
          "name": "Get Room by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/rooms/{{roomId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "rooms", "{{roomId}}"]
            }
          }
        },
        {
          "name": "Update Room",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Conference Room A\",\n  \"capacity\": 12,\n  \"description\": \"Updated large conference room with new equipment\",\n  \"amenities\": [\"projector\", \"whiteboard\", \"wifi\", \"video_conference\"]\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/rooms/{{roomId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "rooms", "{{roomId}}"]
            }
          }
        },
        {
          "name": "Delete Room",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/rooms/{{roomId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "rooms", "{{roomId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Error Cases",
      "item": [
        {
          "name": "Create Room - Missing Name",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"floor\": 2,\n  \"capacity\": 10\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/rooms",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "rooms"]
            }
          }
        },
        {
          "name": "Create Room - Invalid Capacity",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test Room\",\n  \"floor\": 2,\n  \"capacity\": 0\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/rooms",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "rooms"]
            }
          }
        },
        {
          "name": "Get Room - Invalid ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/rooms/invalid-id",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "rooms", "invalid-id"]
            }
          }
        },
        {
          "name": "Get Room - Not Found",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/rooms/507f1f77bcf86cd799439011",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "rooms", "507f1f77bcf86cd799439011"]
            }
          }
        }
      ]
    }
  ]
}